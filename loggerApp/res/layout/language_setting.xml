<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/language_setting"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radio_group_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <org.holoeverywhere.widget.RadioButton
            android:id="@+id/radio_button_lang_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="55dp"
            android:text="@string/language_en"
            android:textSize="18sp" />

        <org.holoeverywhere.widget.RadioButton
            android:id="@+id/radio_button_lang_fi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="55dp"
            android:text="@string/language_fi"
            android:textSize="18sp" />

        <org.holoeverywhere.widget.RadioButton
            android:id="@+id/radio_button_lang_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="55dp"
            android:text="@string/language_cn"
            android:textSize="18sp" />
    </RadioGroup>

</LinearLayout>