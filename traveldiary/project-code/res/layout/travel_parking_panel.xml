<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:keepScreenOn="true" >

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
		<include 
	  	  	android:layout_marginTop="5dp"
		    layout="@layout/layout_travel_transport_mode"
		    />
		    
		<TextView  
		    android:layout_height="wrap_content" 
		    android:layout_width="wrap_content"
		    android:text="@string/travel_parking_place" 
			android:textSize="16sp"
		   	android:layout_marginLeft="5dp"
		   	android:layout_marginRight="5dp"		
			/>  		        
	       
		<org.holoeverywhere.widget.Spinner 
			android:id="@+id/spinner_travel_parking_place_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="230dp"
			android:maxWidth="280dp"
		   	android:layout_marginLeft="5dp"
		   	android:layout_marginRight="5dp"
			android:prompt="@string/travel_parking_place_prompt"
			/>		    

			
		<TextView  
		    android:layout_height="wrap_content" 
		    android:layout_width="wrap_content"
		    android:text="@string/travel_parking_price" 
			android:textSize="16sp"
		   	android:layout_marginLeft="5dp"
		   	android:layout_marginRight="5dp"		
			/>  		        
			       
		<org.holoeverywhere.widget.Spinner 
			android:id="@+id/spinner_travel_parking_price_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="230dp"
			android:maxWidth="280dp"
		   	android:layout_marginLeft="5dp"
		   	android:layout_marginRight="5dp"
			android:prompt="@string/travel_parking_price"
			/>	
		
		<TextView  
		    android:layout_height="wrap_content" 
		    android:layout_width="wrap_content"
		    android:text="@string/travel_parking_payment_method"
			android:textSize="16sp"
		   	android:layout_marginLeft="5dp"
		   	android:layout_marginRight="5dp"		
			/>  
				
		<org.holoeverywhere.widget.Spinner 
			android:id="@+id/spinner_travel_parking_payment_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minWidth="230dp"
			android:maxWidth="280dp"
		   	android:layout_marginLeft="5dp"
		   	android:layout_marginRight="5dp"
			android:prompt="@string/travel_parking_payment_prompt"
			/>		    	
			
		
		<FrameLayout 
   			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="8dp"
	    	android:layout_marginBottom="8dp"	    	
		    >
		    
	    	<TextView
	    	    android:id="@+id/text_view_no_parking"
			    android:layout_height="wrap_content" 
			    android:layout_width="match_parent"
			    android:text="@string/travel_no_parking" 
   				android:gravity="center"
				android:textSize="18sp"
				/> 	
		    
		    <LinearLayout 
		        android:id="@+id/layout_parking_duration_container"
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="8dp"
		    	android:layout_marginBottom="8dp"
		    	android:layout_marginLeft="5dp"
		    	android:layout_marginRight="5dp"
		    	android:orientation="vertical"
		    	android:visibility="gone"
		        >
		        
				<TextView  
				    android:layout_height="wrap_content" 
				    android:layout_width="wrap_content" 
				    android:text="@string/travel_parking_duration" 
	   				android:gravity="center_vertical"
					android:textSize="18sp"
					/> 		
					
				<TextView  
				   	android:id="@+id/text_view_travel_parking_duration_value"
				    android:layout_height="wrap_content" 
				    android:layout_width="wrap_content"
					android:gravity="center_vertical"
					android:textSize="20sp"
					/> 	
		
		    </LinearLayout>				    
		    
		</FrameLayout>
		
	    <LinearLayout 
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="8dp"
	    	android:layout_marginBottom="20dp"
	    	android:layout_marginLeft="5dp"
	    	android:layout_marginRight="5dp"
	    	android:layout_gravity="center_vertical"
	    	android:orientation="horizontal"
	        >
	        	       
	       <ImageButton 
	           android:id="@+id/image_button_travel_parking_play"
	           android:layout_height="wrap_content"
          	   android:layout_width="wrap_content"
          	   android:minWidth="70dp"
          	   android:maxWidth="90dp"
			   android:layout_marginLeft="5dp"
  			   android:layout_marginRight="5dp"
          	   android:src="@drawable/travel_play_button_selector"
          	   android:contentDescription="@string/travel_play_button_descr"
          	   /> 
	           
	       <ImageButton 
	           android:id="@+id/image_button_travel_parking_stop"
	           android:layout_height="wrap_content"
	           android:layout_width="wrap_content"
   	           android:minWidth="70dp"
	           android:maxWidth="90dp"
	           android:src="@drawable/travel_stop_button_selector"
	           android:contentDescription="@string/travel_stop_button_descr"
	           /> 		
		
       	</LinearLayout>
	       
	</LinearLayout>

</ScrollView>