 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="false"
    android:layout_height="wrap_content" >

    <CheckBox
        android:id="@+id/check_box_list_item_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="65dp"
        android:button="@null"
        android:background="@drawable/list_item_check_selector"
        android:clickable="false"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_button_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/img_desc"
            android:focusable="false"
            android:src="@android:drawable/ic_input_add"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_view_event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="65dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_event_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:minHeight="65dp"
            android:minWidth="80dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <ImageView 
            android:id="@+id/image_view_modify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        	android:clickable="true"  
        	android:scaleType="fitCenter"
        	android:visibility="gone" 
            android:contentDescription="@string/img_desc" 
            android:src="@android:drawable/ic_menu_edit"
            android:background="@android:color/white"
            />        
        
        <ImageView 
            android:id="@+id/image_view_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        	android:clickable="true"   
        	android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:contentDescription="@string/img_desc" 
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/white"
            />
        
    </LinearLayout>

</FrameLayout>
 
